{
  "productId":{
    "type":"String",
    "unique":true
  },
  "vendorId":{
    "type":"String",
    "required":true,
    "ref":"Vendors"
  },
  "productName": {
    "type":"String",
    "required":true
  },
  "category":{
    "type": "String",
    "required":true,
    "enum": [
      "Fashion",
      "Electronics",
      "Kitchen",
      "Mobile",
      "Footwear"
    ]
  },
  "price": {
    "type":"Number",
    "required":true
  },
  "dateOfExpiry":{
    "type":"Date",
    "required":true
  },
  "brandName":{
    "type":"String",
    "required":true
  },
  "created": "Date",
  "updated": "Date",
  "status": {
    "type": "String",
    "required":true,
    "enum": [
      "Active",
      "inActive"
    ]
  }
}